<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="@dimen/dimen_20dp">

    <ImageButton
        android:id="@+id/exo_rew"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/dimen_100dp"
        android:background="@color/black_opacity_cc"
        style="@style/ExoMediaButton.Rewind"
        android:contentDescription="@string/rew_btn" />

    <ImageButton
        android:id="@+id/exo_play"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/dimen_100dp"
        android:background="@color/black_opacity_cc"
        style="@style/ExoMediaButton.Play"
        android:contentDescription="@string/play_btn" />

    <ImageButton
        android:id="@+id/exo_pause"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/dimen_100dp"
        android:background="@color/black_opacity_cc"
        style="@style/ExoMediaButton.Pause"
        android:contentDescription="@string/pause_btn" />

    <ImageButton
        android:id="@+id/exo_ffwd"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/dimen_100dp"
        android:background="@color/black_opacity_cc"
        style="@style/ExoMediaButton.FastForward"
        android:contentDescription="@string/ffwd_btn" />
</LinearLayout>